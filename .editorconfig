root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 88

[*.{yml,yaml}]
indent_size = 2

[*.{json,toml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.py]
max_line_length = 88

[Makefile]
indent_style = tab

[*.{dockerfile,Dockerfile*}]
indent_size = 2